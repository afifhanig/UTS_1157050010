<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HOME"
        android:textColor="@color/colorPrimary"
        android:layout_alignTop="@+id/button_list"
        android:layout_marginTop="-90dp"
        android:layout_marginLeft="15dp"
        android:textSize="50sp"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Match List"
        android:layout_centerVertical="true"
        android:textColor="#fff"
        android:id="@+id/button_list"
        android:layout_marginLeft="15dp"
        android:backgroundTint="@color/colorPrimary"/>

    <Button
        android:id="@+id/button_exit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/button_list"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="-20dp"
        android:layout_marginBottom="-50dp"
        android:text="Exit"
        android:textColor="#fff"
        android:backgroundTint="@color/colorPrimary"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="0dp"
        android:layout_toRightOf="@+id/button_list"
        android:background="@color/colorPrimaryDark">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="About"
            android:textColor="#ff0000"
            android:textSize="35sp"
            android:layout_marginTop="150dp"
            android:layout_centerHorizontal="true"
            android:id="@+id/about"/>

        <TextView
            android:id="@+id/welcome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/about"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="-45dp"
            android:paddingBottom="20sp"
            android:text="Welcome to My Apps!"
            android:textColor="#ff0000"
            android:textSize="17sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="In here, You can see"
            android:textColor="#ff0000"
            android:textSize="17sp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="5dp"
            android:layout_alignBottom="@+id/welcome"
            android:id="@+id/inhere"/>

        <TextView
            android:id="@+id/mu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/inhere"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="-19dp"
            android:text="Manchester United"
            android:textColor="#ff0000"
            android:textSize="17sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/mu"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="-19dp"
            android:text="match result."
            android:textColor="#ff0000"
            android:textSize="17sp"
            android:id="@+id/match_result"/>

        <ImageView
            android:id="@+id/img1"
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:layout_alignBottom="@+id/match_result"
            android:layout_marginBottom="-130dp"
           android:layout_centerHorizontal="true"
            android:src="@mipmap/ic_launcher" />

    </RelativeLayout>



</RelativeLayout>